---
import "../styles/global.css";
import Prose from "../components/Prose.astro";

export interface Props {
  frontmatter: {
    title: string;
    date: Date;
    slug: string;
    img?: {
      src: string;
      alt?: string;
      caption?: string;
    };
  };
}

const { frontmatter } = Astro.props;
const formattedDate = frontmatter.date.toLocaleDateString("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{frontmatter.title} - Kalalau Cantrell</title>
    <meta name="description" content={frontmatter.title} />
  </head>
  <body>
    <header class="py-8 px-4 pcb-trace">
      <div class="max-w-6xl mx-auto">
        <nav class="flex justify-between items-center">
          <a
            href="/"
            class="text-2xl font-bold text-amber-400 hover:text-amber-300 transition-colors"
            ><span class="text-slate-100">Kal</span>alau Cantrell</a
          >
          <div class="space-x-6">
            <a
              href="/"
              class="text-slate-300 hover:text-amber-400 transition-colors"
              >Home</a
            >
            <a href="/blog" class="text-amber-400 font-medium">Blog</a>
          </div>
        </nav>
      </div>
    </header>

    <main class="bg-slate-900/50 text-slate-100">
      <article class="max-w-4xl mx-auto px-4 py-12">
        <header class="mb-12">
          <h1 class="text-4xl md:text-5xl font-bold mb-4 text-slate-100">
            {frontmatter.title}
          </h1>
          <time class="text-amber-400 font-medium text-lg">
            {formattedDate}
          </time>

          {
            frontmatter.img && (
              <div class="mt-8">
                <img
                  src={frontmatter.img.src}
                  alt={frontmatter.img.alt || frontmatter.title}
                  class="w-full rounded-lg shadow-lg"
                />
                {frontmatter.img.caption && (
                  <p class="text-slate-400 text-sm mt-2 italic text-center">
                    {frontmatter.img.caption}
                  </p>
                )}
              </div>
            )
          }
        </header>

        <!-- Content -->
        <Prose>
          <slot />
        </Prose>
      </article>
    </div>
  </body>
</html>
