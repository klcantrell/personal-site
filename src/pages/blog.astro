---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Kalalaus Blog</title>
	</head>
	<body>
		<!-- Header -->
		<header class="py-8 px-4 pcb-trace">
			<div class="max-w-6xl mx-auto">
				<nav class="flex justify-between items-center">
					<a href="/" class="text-2xl font-bold text-amber-400 hover:text-amber-300 transition-colors"><span class="text-slate-100">Kal</span>alau Cantrell</a>
					<div class="space-x-6">
						<a href="/" class="text-slate-300 hover:text-amber-400 transition-colors">Home</a>
						<a href="/blog" class="text-amber-400 font-medium">Blog</a>
					</div>
				</nav>
			</div>
		</header>

		<main class="py-16 px-4">
			<div class="max-w-4xl mx-auto">
				<p class="text-xl text-slate-300 text-center mb-16 max-w-2xl mx-auto">
					Thoughts on software development and AI engineering.
				</p>
				
				<div class="space-y-8">
					{allBlogPosts.map((post) => (
						<article class="bg-slate-800 rounded-lg p-8 hover:bg-slate-700 transition-colors border border-slate-700">
							<div class="flex flex-col md:flex-row md:items-center md:justify-between mb-4">
								<h2 class="text-2xl font-bold text-slate-100 mb-2 md:mb-0">
									<a href={`/blog/${post.slug}`} class="hover:text-amber-400 transition-colors">
										{post.title}
									</a>
								</h2>
								<time class="text-amber-400 text-sm font-medium">
									{new Date(post.date).toLocaleDateString('en-US', { 
										year: 'numeric', 
										month: 'long', 
										day: 'numeric' 
									})}
								</time>
							</div>
							<p class="text-slate-300 mb-6 leading-relaxed">
								{post.excerpt}
							</p>
							<a href={`/blog/${post.slug}`} class="inline-flex items-center text-amber-400 hover:text-amber-300 font-medium">
								Read More 
								<svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
								</svg>
							</a>
						</article>
					))}
				</div>
			</div>
		</main>
	</body>
</html>