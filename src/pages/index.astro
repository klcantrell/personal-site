---
import '../styles/global.css';

const mockBlogPosts = [
  {
    id: 1,
    title: "Getting Started with Astro",
    excerpt: "Exploring the modern web framework that delivers fast, content-focused websites.",
    date: "2024-01-15",
    slug: "getting-started-with-astro"
  },
  {
    id: 2,
    title: "Building with Tailwind CSS",
    excerpt: "How utility-first CSS frameworks can speed up your development workflow.",
    date: "2024-01-10",
    slug: "building-with-tailwind-css"
  },
  {
    id: 3,
    title: "JavaScript Modern Patterns",
    excerpt: "Exploring contemporary JavaScript patterns and best practices for 2024.",
    date: "2024-01-05",
    slug: "javascript-modern-patterns"
  },
  {
    id: 4,
    title: "Web Performance Optimization",
    excerpt: "Techniques and strategies to make your websites load faster and perform better.",
    date: "2024-01-01",
    slug: "web-performance-optimization"
  },
  {
    id: 5,
    title: "TypeScript for Better Code",
    excerpt: "How TypeScript can improve your development experience and code quality.",
    date: "2023-12-28",
    slug: "typescript-for-better-code"
  }
];

const recentPosts = mockBlogPosts.slice(0, 5);
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Your Name - Developer</title>
	</head>
	<body>
		<!-- Hero Section -->
		<section class="min-h-screen flex items-center justify-center px-4 pcb-trace">
			<div class="max-w-4xl mx-auto text-center">
				<div class="mb-8">
					<img 
						src="/headshot.jpg" 
						alt="Your Name" 
						class="w-32 h-32 mx-auto rounded-full border-4 border-amber-400 shadow-lg shadow-amber-400/20"
					/>
				</div>
				<h1 class="text-4xl md:text-6xl font-bold mb-6 text-slate-100">
					Hello, I'm <span class="text-amber-400">Your Name</span>
				</h1>
				<p class="text-xl md:text-2xl text-slate-300 mb-8 max-w-2xl mx-auto">
					I'm a passionate developer who loves building elegant solutions to complex problems. 
					I specialize in modern web technologies and enjoy creating experiences that make a difference.
				</p>
				<div class="flex justify-center space-x-4">
					<a href="/blog" class="bg-amber-500 hover:bg-amber-600 text-slate-900 px-6 py-3 rounded-lg font-medium transition-colors">
						View My Blog
					</a>
					<a href="#contact" class="border border-amber-500 text-amber-400 hover:bg-amber-500 hover:text-slate-900 px-6 py-3 rounded-lg font-medium transition-colors">
						Get In Touch
					</a>
				</div>
			</div>
		</section>

		<!-- Recent Blog Posts Section -->
		<section class="py-16 px-4 bg-slate-900/50">
			<div class="max-w-6xl mx-auto">
				<h2 class="text-3xl md:text-4xl font-bold text-center mb-12 text-slate-100">
					Recent <span class="text-amber-400">Blog Posts</span>
				</h2>
				<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
					{recentPosts.map((post) => (
						<article class="bg-slate-800 rounded-lg p-6 hover:bg-slate-700 transition-colors border border-slate-700">
							<h3 class="text-xl font-bold mb-3 text-slate-100">
								<a href={`/blog/${post.slug}`} class="hover:text-amber-400 transition-colors">
									{post.title}
								</a>
							</h3>
							<p class="text-slate-300 mb-4 text-sm leading-relaxed">
								{post.excerpt}
							</p>
							<div class="flex justify-between items-center">
								<time class="text-amber-400 text-sm font-medium">
									{new Date(post.date).toLocaleDateString('en-US', { 
										year: 'numeric', 
										month: 'long', 
										day: 'numeric' 
									})}
								</time>
								<a href={`/blog/${post.slug}`} class="text-amber-400 hover:text-amber-300 text-sm font-medium">
									Read More â†’
								</a>
							</div>
						</article>
					))}
				</div>
				<div class="text-center mt-12">
					<a href="/blog" class="bg-amber-500 hover:bg-amber-600 text-slate-900 px-8 py-3 rounded-lg font-medium transition-colors">
						View All Posts
					</a>
				</div>
			</div>
		</section>
	</body>
</html>
